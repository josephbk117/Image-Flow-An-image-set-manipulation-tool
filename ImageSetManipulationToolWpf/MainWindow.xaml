<Window x:Class="ImageSetManipulationToolWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSetManipulationToolWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="435.725" Width="832">
    <Grid Background="#FFFFF2A0">
        <TextBox x:Name="folderPathTextBox" Padding="5,0,0,0" VerticalContentAlignment="Center" BorderThickness="0" Height="33" Margin="10,10,139,0" TextWrapping="Wrap" Text="Input Folder Path" VerticalAlignment="Top" Background="#FFFFA02F" Foreground="White"/>
        <TextBox x:Name="outputFolderPathTextBox" Padding="5,0,0,0" VerticalContentAlignment="Center" BorderThickness="0" Height="33" Margin="10,48,139,0" TextWrapping="Wrap" Text="Output Folder Path" VerticalAlignment="Top" Background="#FFFFA02F" Foreground="White"/>
        <Rectangle x:Name="openFolderButton1" StrokeThickness="5" Fill="#FFFFA02F" Height="33" Margin="0,10,10,0" Stroke="#FFFFCD46" VerticalAlignment="Top" HorizontalAlignment="Right" Width="124" MouseLeftButtonUp="openFolderButton_OnLBU"/>
        <Rectangle x:Name="openFolderButton2" StrokeThickness="5" Fill="#FFFFA02F" Height="33" Margin="0,48,10,0" Stroke="#FFFFCD46" VerticalAlignment="Top" HorizontalAlignment="Right" Width="124" MouseLeftButtonUp="openFolderButton_OnLBU"/>
        <StackPanel x:Name="operationStack" Margin="0,91,10,10" HorizontalAlignment="Right" Width="248" Background="#FFFFB900">
            <Label Content="Operation Set" FontSize="24" HorizontalContentAlignment="Center" Foreground="White" Background="#FFFFA02F"/>
        </StackPanel>
        <Rectangle x:Name="generateImagesButton" Fill="#FFFFA02F" StrokeThickness="5" Margin="10,0,263,10" Stroke="#FFFFCD46" MouseLeftButtonUp="generateImagesButton_OnLBU" Height="40" VerticalAlignment="Bottom"/>
        <StackPanel Margin="10,91,263,55" Background="#FFFFB900">
            <StackPanel Orientation="Horizontal" Background="#FFFFCD46">
                <Label Content="Brightness" FontSize="14" Margin="10,10,10,10" Width="100" Foreground="White"/>
                <TextBox x:Name="brightnessValueText" Text="value" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" Height="30" Margin="10,10,10,10" Background="#FFFFA02F" Foreground="White"/>
                <Button Content="Add" BorderThickness="0" Background="#FFFFA02F" Margin="10,10,10,10" Padding="15,5,15,5" Click="AddBrightness" Foreground="White"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Contrast" FontSize="14" Margin="10,10,10,10" Width="100" Foreground="White"/>
                <TextBox x:Name="contrastValueText" Text="value" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" Height="30" Margin="10,10,10,10" Background="#FFFFA02F" Foreground="White"/>
                <Button Content="Add" BorderThickness="0" Background="#FFFFA02F" Margin="10,10,10,10" Padding="15,5,15,5" Click="AddContrast" Foreground="White"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Background="#FFFFCD46">
                <Label Content="Desturation" FontSize="14" Margin="10,10,10,10" Width="100" Foreground="White"/>
                <TextBox x:Name="desaturationValueText" Text="value" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" Height="30" Margin="10,10,10,10" Background="#FFFFA02F" Foreground="White"/>
                <Button Content="Add" BorderThickness="0" Background="#FFFFA02F" Margin="10,10,10,10" Padding="15,5,15,5" Click="AddDesaturation" Foreground="White"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Crop" FontSize="14" Margin="10,10,10,10" Width="100" Foreground="White"/>
                <TextBox x:Name="cropXValue" Text="x" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" Height="30" Margin="10,10,10,10" Background="#FFFFA02F" Foreground="White"/>
                <TextBox x:Name="cropYValue"  Text="y" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" Height="30" Margin="10,10,10,10" Background="#FFFFA02F" Foreground="White"/>
                <TextBox x:Name="cropWidthValue"  Text="width" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" Height="30" Margin="10,10,10,10" Background="#FFFFA02F" Foreground="White"/>
                <TextBox x:Name="cropHeightValue"  Text="height" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" Height="30" Margin="10,10,10,10" Background="#FFFFA02F" Foreground="White"/>
                <Button Content="Add" BorderThickness="0" Background="#FFFFA02F" Margin="10,10,10,10" Padding="15,5,15,5" Click="AddCrop" Foreground="White"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
